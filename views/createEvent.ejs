<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Create Event</title>
</head>

<body>
    <form action="/events/create" method="POST">
        <label for="name">Name</label>
        <input type="text" name="name">
        <label for="name">Location</label>
        <input required type="text" name="location" id="location" class="form-control">
        <label for="name">Start Date</label>
        <input type="date" required name="start_date">
        <label for="name">End Date</label>
        <input type="date" required name="end_date">
        <label for="name">Categories</label>
        <select name="category_id">
            <% categories.forEach((category) => { %>
            <option value="<%= category.id %>">
                <%= category.name %></option>
            <% }) %>
        </select>
        <input type="submit" value="Submit">
    </form>
</body>
<script type="text/javascript"
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD2mFvlnnYry_fUUI7CsCTG0cZUY_ZWpIM&libraries=places"></script>
<script src="/static/scripts/event.js" type="text/javascript"></script>

</html>