<!DOCTYPE html>
<html>
	<head>
		<%- include('./partials/head') %>
	</head>
	<body>
		<%- include('./partials/header') %>
		<div class="container">
			<h3>Create Event</h3>
			<br>
			<form method="POST" action="/events/create">
				<div class="form-group row">
					<label class="col-sm-2 control-label">Name</label>
					<div class="col-sm-6">
						<input class="form-control" type="text" name="name">
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 control-label">Location</label>
					<div class="col-sm-6">
						<input required type="text" name="location" id="location" class="form-control">
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 control-label">Start date</label>
					<div class="col-sm-6">
						<input type="date" class="form-control" required name="start_date">
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 control-label">End date</label>
					<div class="col-sm-6">
						<input type="date" class="form-control" required name="end_date">
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-2 control-label">Categories</label>
					<div class="col-sm-6">
						<select class="form-control" name="category_id">
							<% categories.forEach((category) => { %>
								<option value="<%= category.id %>">
									<%= category.name %></option>
							<% }) %>
						</select>
					</div>
				</div>
				<input type="submit" class="btn btn-success" value="Submit">
				<a href="/events" class="btn btn-info">Back to events</a>
			</form>
			<div class="form-group row"></div>
		</div>
		<%- include('./partials/footer') %>
		<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<GOOGLE_API_KEY>&libraries=places"></script>
		<script src="/static/scripts/event.js" type="text/javascript"></script>
	</body>
</html>
