<!DOCTYPE html>
<html lang="en">

	<head>
		<title>Declined Events</title>
		<%- include('../partials/head.ejs') %>
	</head>

	<body>
		<section id="container" class="">
			<%- include('../partials/header.ejs') %>
			<%- include('../partials/sidebar.ejs') %>
			<section id="main-content">
				<section class="wrapper">
					<div class="row">
						<div class="col-lg-12">
							<h3 class="page-header">
								<i class="fa fa-laptop"></i>
								Declined Events</h3>
							<ol class="breadcrumb">
								<li>
									<i class="fa fa-home"></i>
									<a href="/admin">Home</a>
								</li>
								<li>
									<i class="fa fa-laptop"></i>Declined Events</li>
							</ol>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<section class="panel">
								<header class="panel-heading" style="z-index: 0;">
									Events
								</header>
								<div class="panel-body">
									<table class="table">
										<tr>
											<th>Name</th>
											<th>Location</th>
											<th>Start date</th>
											<th>End date</th>
											<th>Category</th>
											<th>Status</th>
											<th>Actions</th>
										</tr>
										<% if (events.length) { %>
											<% events.forEach((event) => { %>
												<tr>
													<td><%= event.name %></td>
													<td><%= event.location %></td>
													<td><%= formatDate(event.start_date) %></td>
													<td><%= formatDate(event.end_date) %></td>
													<td><%= event.Category.name %></td>
													<td><%= event.status ? 'Closed' : 'Open' %></td>
													<td>
														<a href="#" onclick="openModal('/events/declined/delete/<%= event.id %>')">
															<i class="fa fa-trash" aria-hidden="true"></i>
														</a>
													</td>
												</tr>
											<% }) %>
										<% } else { %>
											<tr>
												<td colspan="7">Event is not found</td>
											</tr>
										<% } %>
									</table>
								</div>
							</section>
						</div>
					</div>
				</section>
			</section>
		</section>
		<%- include('../../partials/modal.ejs') %>
		<script src="/static/scripts/event.js" type="text/javascript"></script>
	</body>
</html>
